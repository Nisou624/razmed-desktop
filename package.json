{
  "name": "razmed-portal-desktop",
  "version": "1.0.0",
  "description": "Application de gestion documentaire pour la SNTP",
  "main": "electron.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "server": "node server/server.js",
    "cleanup": "node cleanup-ports.js",
    "fresh-start": "npm run cleanup && npm start",
    "build": "electron-builder",
    "test": "node test-app.js",
    "test-permissions": "node test-permissions.js"
  },
  "keywords": ["electron", "document", "management", "sntp"],
  "author": "SNTP Development Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "sqlite3": "^5.1.6",
    "multer": "^1.4.5-lts.1",
    "fs-extra": "^11.1.1",
    "mammoth": "^1.6.0",
    "xlsx": "^0.18.5",
    "pdf-lib": "^1.17.1",
    "sharp": "^0.32.6",
    "body-parser": "^1.20.2"
  },
  "build": {
    "appId": "com.sntp.razmed-portal",
    "productName": "SNTP Portail Document",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/@electron/",
      "!dist/",
      "!.git/"
    ]
  }
}

